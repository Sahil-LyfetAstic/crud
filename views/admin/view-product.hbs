<section class="mt-5">
    <div class="container">
        <table class="table mt-5" id="view-product">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 50px; height:50px;" src="/product-image/{{this._id}}.jpeg" alt=""></td>
                    <td>
                        <a href="" class="btn btn-primary">Edit</a>
        
                        <a href="" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>